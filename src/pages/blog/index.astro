---
import Layout from '../../layouts/Layout.astro'
import Navbar from '../../components/Navbar.astro'
import PageTitle from '../../components/PageTitle.astro'
import CardBlog from '../../components/blog/CardBlog.astro'

const posts = await Astro.glob('./posts/*.mdx')
---

<Layout>
  <Navbar href="/" />
  <PageTitle title="Blog" />
  <main class="flex flex-col py-10 items-center">
    <div
      class="grid grid-cols-1 md:grid-cols-2 place-items-center gap-5 px-5 lg:max-w-[50rem]"
    >
      {
        posts.map(post => (
          <CardBlog
            title={post.frontmatter.title}
            description={post.frontmatter.description}
            href={post.url}
            imgSrc={post.frontmatter.articleImage}
          />
        ))
      }
    </div>
  </main>
</Layout>
