---
import '@fontsource/space-mono'
import Navbar from '../components/Navbar.astro'
import PageTitle from '../components/PageTitle.astro'

const { frontmatter } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Astro description"
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>Fernando Lorca | {frontmatter.title}</title>
  </head>
  <body class="pb-10">
    <Navbar href="/portfolio" />
    <main class="px-5">
      <article class="flex flex-col items-center">
        <PageTitle title={frontmatter.title} />
        <div class="max-w-[40rem] py-10">
          <slot />
        </div>
      </article>
    </main>
  </body>
</html>

<style is:global>
  body {
    background-color: #020213;
    background-image: url('/bg-gradient.svg');
    background-position: top;
    background-repeat: no-repeat;
    font-family: 'Space Mono', monospace;
    color: #c5cad1;
  }

  pre {
    padding: 1rem;
    border-radius: 0.6rem;
    margin: 2rem 0;
    font-size: 15px;
  }
</style>
