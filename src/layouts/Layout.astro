---
import '@fontsource/space-mono'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Astro description"
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  body {
    background-color: #020213;
    background-image: url('/bg-gradient.svg');
    background-position: top;
    background-repeat: no-repeat;
    font-family: 'Space Mono', monospace;
  }

  .bg-gradient {
  }
</style>
